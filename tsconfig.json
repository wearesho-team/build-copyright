{
  "compilerOptions": {
    "declarationDir": "./dist",
    "module": "esnext",
    "target": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationMap": false,
    "noEmit": false,
    "emitDeclarationOnly": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "./bootstrap.d.ts",
    "./webpack.d.ts"
  ]
}
