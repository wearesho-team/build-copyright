{
  "compilerOptions": {
    "baseUrl": ".",
    "declarationDir": "./dist",
    "rootDir": "./src",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationMap": false,
    "noEmit": false,
    "emitDeclarationOnly": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
